<h1>Follow Users</h1>
<% if @users.present? %>
<% @users.each do |user| %>
    <table class="table">
      <thead>
        <tr>
	      <th>image</th>
		  <th>name</th>
		  <th colspan="3"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <tr>
		  <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
	      <td><%= user.name %></td>
		  <td>フォロー数:<%= user.following_ids.count %></td>
		  <td>フォロワー数:<%= user.follower_ids.count %></td>
		  <td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
		</tr>
	  </tbody>
    </table>
    <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>